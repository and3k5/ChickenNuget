@using ChickenNuget.Data
@model ChickenNuget.Data.Config.Configuration

@using (@Html.BeginForm(FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ProjectSource)
        @Html.DropDownListFor(m => m.ProjectSource, Enum.GetValues(typeof(ProjectSources)).Cast<ProjectSources>().Select(x => new SelectListItem()
        {
            Text = x.ToString("G"),
            Value = ((int) x).ToString(),
            Selected = x == Model.ProjectSource,
        }))
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Authentication)
        @Html.EditorFor(m => m.Authentication, "Authentication")
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Parameters)
        @Html.EditorFor(m => m.Parameters, "Parameters")
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
}